{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "../dist/renderer",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/renderer/*": ["./renderer/*"],
      "@/shared/*": ["./shared/*"],
      "@/services/*": ["./services/*"]
    }
  },
  "include": ["./renderer/**/*", "./shared/**/*", "./renderer/types.d.ts"],
  "exclude": ["./main/**/*"]
}
