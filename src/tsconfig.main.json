{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "../dist/main",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/main/*": ["./main/*"],
      "@/shared/*": ["./shared/*"],
      "@/services/*": ["./services/*"],
      "@/workers/*": ["./workers/*"]
    }
  },
  "include": [
    "./main/**/*",
    "./shared/**/*"
  ],
  "exclude": [
    "./renderer/**/*"
  ]
}
