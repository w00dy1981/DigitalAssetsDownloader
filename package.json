{
  "name": "digital-asset-downloader",
  "version": "1.9.2",
  "description": "Modern desktop application for bulk downloading and processing digital assets",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:main:watch\" \"npm run build:renderer:watch\" \"npm run start:electron\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:main:watch": "webpack --config webpack.main.config.js --mode development --watch",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:renderer:watch": "webpack --config webpack.renderer.config.js --mode development --watch",
    "start:electron": "wait-on dist/main/main.js && electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "publish": "npm run build && electron-builder --mac --win --publish=always",
    "publish:win": "npm run build && electron-builder --win --publish=always",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json,css,md}",
    "release": "npm run test && npm run build && npm version patch && git push --tags && npm run publish",
    "release:minor": "npm run test && npm run build && npm version minor && git push --tags && npm run publish",
    "release:major": "npm run test && npm run build && npm version major && git push --tags && npm run publish"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "digital-assets",
    "downloader"
  ],
  "author": {
    "name": "Digital Asset Downloader Team",
    "email": "noreply@digitalassetdownloader.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.1.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-log": "^5.1.7",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "fast-csv": "^4.3.6",
    "jimp": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.digitalassetdownloader.app",
    "productName": "Digital-Asset-Downloader",
    "directories": {
      "output": "release"
    },
    "icon": "build/icon.png",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "w00dy1981",
        "repo": "DigitalAssetsDownloader",
        "releaseType": "release"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}
